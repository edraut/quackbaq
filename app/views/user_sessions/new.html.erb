<h1><%= t(:login_heading) %></h1>

<% form_for :user_session, @user_session, :url => user_session_url do |f| %>
  <% if @user_session.errors.any? %> <%= @user_session.errors.full_messages %> <% end %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>
