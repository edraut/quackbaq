    );
		jQuery('#place_bid_link').click(function(e){
			jQuery.ajax({
				url: jQuery(e.target).attr('href'),
				type: 'GET',
				dataType: 'json',
				cache: false,
				success: function(data,textStatus) {
					jQuery('#available_bids').html(data.bid_count);
