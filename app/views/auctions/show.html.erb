    PUBNUB.subscribe({
      channel  : "<%= @auction.channel_name %>",
      callback : function(message) {
        refreshBidHistory(message);
        refreshStats(message);
        resetTimer(message.time_left); },
      error    : function(e) {
          // Do not call subscribe() here!
