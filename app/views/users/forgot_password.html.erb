<div class="span-24 padding-top-large">
	<div class="span-6">&nbsp;</div>
	<div class="span-14">
		<h1>Request a password reset</h1>
		<% form_for :user, @user, :url => request_password_reset_user_url('none') do |f| %>
			<% if @user.errors.any? %> <%= @user.errors.full_messages %> <% end %>
			<%= f.label :email %><br />
			<%= f.text_field :email %><br />
		  	<%= f.submit "Submit Request" %>
		<% end %>
	</div>
</div>
